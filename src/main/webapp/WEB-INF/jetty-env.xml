				<Set name="user">xxx</Set>
				<Set name="password">xxx</Set>
				<Set name="maxPoolSize">3</Set>
				<Set name="testConnectionOnCheckin">true</Set>
				<Set name="maxIdleTimeExcessConnections">240</Set>
				<Set name="idleConnectionTestPeriod">600</Set>
				<Set name="preferredTestQuery">SELECT 1</Set>
			</New>
		</Arg>
	</New>
</Configure> 